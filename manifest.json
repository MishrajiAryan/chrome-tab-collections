{
  "manifest_version": 3,
  "name": "Chrome Tab Collections",
  "version": "2.1",
  "description": "Complete Microsoft Edge Collections replica for Chrome with local backup/restore",
  "permissions": [
    "storage",
    "sidePanel", 
    "contextMenus",
    "tabs",
    "activeTab",
    "scripting",
    "tabGroups",
    "downloads",
    "storage",
    "unlimitedStorage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png", 
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    },
    "default_title": "Open Collections"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
